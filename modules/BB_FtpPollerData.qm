# minimum qore version
%requires qore >= 0.9.4

%new-style
%strict-args
%enable-all-warnings
%require-types

%requires DataProvider
%requires FtpPoller

module BB_FtpPollerData {
    version = "1.0";
    desc = "Registers data types provided by FTP building blocks";
    author = "Qore Technologies, s.r.o.";
    url = "https://qoretechnologies.com";
    license = "MIT";
    init = sub () {
        DataProvider::registerType("qoretechnologies/building-blocks/ftp/event", new BBM_FtpPollerOrderDataType());
    };
}

class BBM_FtpPollerOrderDataType inherits FtpPollerFileEventInfoDataType {
    constructor() {
        # add additional fields added by BB
        addField(new QoreDataField("transfer_time", "a relative date/time value giving the time it took to transfer "
            "the file; only present if the 'ftp-polling-file-connection' config item is set", DateOrNothingType));
        addField(new QoreDataField("tmp_filename", "the temporary filename used to store the file until the post "
            "action; only present if the 'ftp-polling-file-connection' config item is set", StringOrNothingType));
        addField(new QoreDataField("tmp_path", "the current temporary path on the filesystem of the file; only "
            "present if the 'ftp-polling-file-connection' config item is set", StringOrNothingType));
        addField(new QoreDataField("local_path", "this key is set to a string giving the local path where the file's "
            "data is stored; only present if the 'ftp-polling-file-connection' config item is set",
            StringOrNothingType));
    }
}
